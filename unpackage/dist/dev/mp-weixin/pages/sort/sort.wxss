.nav-right {
	width: 70%;
	padding: 30rpx;
}
.nav-right-con image{
	width: 440rpx;
	height: 182rpx;
	background-size:100% ;
}
.nav-right-item {
	font-weight: 700;
	background: #F6F6F6;
	float: left;
	text-align: center;
	padding: 20rpx 30rpx;
	font-size: 28rpx;
	margin-right: 12rpx;
	border-radius: 8rpx;
	margin-top: 30rpx;
}
.nav-right-item image {
	width: 100rpx;
	height: 100rpx;
}
